@using System.Web.Optimization
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>
    
    <body>
        @* ReSharper disable once InvalidValue *@
        <style >
            #header_title
            {
                /*background: url('/resource/images/header_bg.jpg');*/
                
                width: 100%;
                height: 80px;
                position: absolute;
                top: 0px;
                left: 0px;
                
            }
            body {
                margin: 0px;
                padding: 0px;
                overflow-x: hidden;
            }
            #title_html {
                background: url("/resource/images/icon.png") no-repeat;
                width: 480px;
                height: 80px;
                position: absolute;
                top: 0px;
                left: 0px;
            }
            #bottom_html {
                background: url('/resource/images/icon.png')  repeat-x  0px -330px;
                height: 38px;
                width: 100%;
                position: absolute;
                top: 200px;
                text-align: center;
                line-height: 38px;
                font-size: 12px;
            }
            #div_centent_html {
                width: 1200px;
                position: relative;
                margin: 0 auto;
                top: 80px;
                border: solid red 0px;
            }
            #right_buttoms {
                width: 260px;
                height: 80px;
                position: absolute;
                left: 0px;
                top: 0px;
            }
            #div_setpwd {
                width: 60px;
                height: 60px;
                background: url('/resource/images/icon.png')  no-repeat -265px -80px;
                position: absolute;
                top: 10px;
                left: 10px;
                cursor: pointer;
            }
            #out_sys {
                 width: 60px;
                height: 60px;
                background: url('/resource/images/icon.png')  no-repeat -340px -80px;
                position: absolute;
                top: 10px;
                left: 110px;
                cursor: pointer;
            }
            #help_sys {
                 width: 60px;
                height: 60px;
                background: url('/resource/images/icon.png')  no-repeat -437px -80px;
                position: absolute;
                top: 10px;
                left: 210px;
                cursor: pointer;
            }
            .botton_icon {
                position:absolute;top:45px; left:-10px;color: #fff;
            }
        </style>
      
         <link href="~/Resource/Scripts/extjs/css/ext-theme-crisp/ext-theme-crisp-all.css" rel="stylesheet" />
       
         @Scripts.Render("~/bundle/commonality")
@*        <script src="~/Resource/Scripts/jquery-1.8.3.js"></script>
        <script src="~/Resource/Scripts/JqueryFn.js"></script>
        <script src="~/Resource/Scripts/extjs/js/ext-all.js"></script>*@
          @RenderSection("Script",false)
        @RenderSection("Css",false)
       
        <img id="header_title" src="/resource/images/header_bg.jpg" />
        <div id="title_html">
           
        </div>
        <div id="right_buttoms">
            <div id="div_setpwd">
                <label class="botton_icon">修改资料</label>
            </div>
            <div id="out_sys">
                <label class="botton_icon">退出系统</label>
            </div>
             <div id="help_sys">
                 <label class="botton_icon">帮助手册</label>
            </div>
        </div>
        <div id="div_centent_html">
            @RenderBody()
        </div>
        <div id="bottom_html">
            
        </div>
        
        
      
    </body>

</html>
