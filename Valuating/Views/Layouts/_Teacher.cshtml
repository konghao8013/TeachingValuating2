@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <link href="~/Resource/Scripts/extjs/css/ext-theme-crisp/ext-theme-crisp-all.css" rel="stylesheet" />
    @Scripts.Render("~/bundle/teacher")
    <style>
        #header_title {
            /*background: url('/resource/images/header_bg.jpg');*/
            width: 100%;
            height: 80px;
            position: absolute;
            top: 0px;
            left: 0px;
        }

        #right_buttoms {
            width: 260px;
            height: 80px;
            position: absolute;
            left: 0px;
            top: 0px;
        }

        #div_tooldownload {
            width: 60px;
            height: 40px;
            background: url('/resource/images/icon.png') no-repeat -175px -80px;
            position: absolute;
            top: 10px;
            left: -100px;
            cursor: pointer;
        }

        #div_setpwd {
            width: 60px;
            height: 60px;
            background: url('/resource/images/icon.png') no-repeat -265px -80px;
            position: absolute;
            top: 10px;
            left: 10px;
            cursor: pointer;
        }

        #out_sys {
            width: 60px;
            height: 60px;
            background: url('/resource/images/icon.png') no-repeat -340px -80px;
            position: absolute;
            top: 10px;
            left: 110px;
            cursor: pointer;
        }

        #help_sys {
            width: 60px;
            height: 60px;
            background: url('/resource/images/icon.png') no-repeat -437px -80px;
            position: absolute;
            top: 10px;
            left: 210px;
            cursor: pointer;
        }

        .botton_icon {
            position: absolute;
            top: 45px;
            left: -10px;
            color: #fff;
        }

        #title_html {
            background: url("/resource/images/icon.png") no-repeat;
            width: 480px;
            height: 80px;
            position: absolute;
            top: 0px;
            left: 0px;
        }

        #div_header_title {
            height: 30px;
            width: 100%;
            position: absolute;
            top: 82px;
            background: #eeeeee;
            border-bottom: solid 1px #c5c5c5;
            line-height: 30px;
            font-size: 12px;
            color: #333333;
        }

        #div_teacherName {
            position: absolute;
            left: 125px;
            color: #ff6600;
        }

        #div_right_header {
            width: 220px;
            height: 30px;
            border: solid red 0px;
            position: absolute;
            top: 0px;
        }
         body {
                margin: 0px;
                padding: 0px;
                overflow-x: hidden;
            }
        #div_sd_cut {
            position: absolute;
            left: 0px;
            color: #ff6600;
            cursor: pointer;
        }

        #div_sd_exit {
            position: absolute;
            left: 130px;
            color: #ff6600;
            cursor: pointer;
        }

        #div_content {
            position: absolute;
            width: 100%;
            
            top: 114px;
        }

        #bottom_html {
            background: url('/resource/images/icon.png') repeat-x 0px -330px;
            height: 38px;
            width: 100%;
            position: absolute;
            top: 200px;
            text-align: center;
            line-height: 38px;
            font-size: 12px;
        }
    </style>


    @RenderSection("Script", false)
    @RenderSection("Css", false)

    <img id="header_title" src="/resource/images/header_bg.jpg" />
    <div id="title_html">
    </div>
    <div id="right_buttoms">
        <div id="div_tooldownload">
            <label class="botton_icon">工具下载</label>
        </div>
        <div id="div_setpwd">
            <label class="botton_icon">修改资料</label>
        </div>
        <div id="out_sys">
            <label class="botton_icon">退出系统</label>
        </div>
        <div id="help_sys">
            <label class="botton_icon">帮助手册</label>
        </div>
    </div>
    <div id="div_header_title">
        <div style="font-weight: bold; position: absolute; left: 20px;">登录信息:</div>
        <div style="position: absolute; left: 90px;">你好，</div>
        <div id="div_teacherName">教师名称</div>
        <div id="div_right_header">
            <div id="div_sd_cut"  onclick="QH()">[手动切换到下一学生]</div>
            <div id="div_sd_exit" onclick="DH()">[打回材料]</div>
        </div>
    </div>


    <div id="div_content">
        @RenderBody()
    </div>

    <div id="bottom_html">
    </div>
</body>
</html>
