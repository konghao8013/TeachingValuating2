@using System.Web.Optimization
@using Valuating.Controllers
@{
    Layout = "~/Views/Layouts/_Overstory.cshtml";
    ViewBag.Title = VT.SystemName;
}

@section Script{
    @ScriptOver.Render("~/bundle/commonality")
    @ScriptOver.Render("~/bundle/student/upuserdata")
}
@section Css{
    <style>
        #div_phone {
            top: 40px;
            left: 120px;
            position: absolute;
        }
        #div_email {
            top: 80px;
            left: 120px;
            position: absolute;
        }
        #div_password {
            top: 120px;
            left: 120px;
            position: absolute;
        }
        .input_class {
            height: 21px;
            width: 170px;
            border: solid 1px #959595;
            position: absolute;
            left: 60px;
            line-height: 21px;

        }
        #div_buttons {
            position: absolute;
            left: 178px;
            top: 180px;
           
        }
        #btn_save {
            width: 80px;
            height: 20px;
            background: url('/resource/images/btn_bg.gif') repeat-x 0px 0px;
            border: solid #cac5c5 1px;
            position: absolute;
            left: 0px;
            top: 0px;
             text-align: center;
             font-size: 12px;
            color: #fff;
            line-height: 20px;
             cursor: pointer;
        }
        #btn_exit { 
             width: 80px;
            height: 20px;
            background: url('/resource/images/btn_bg.gif') repeat-x 0px -20px;
            border: solid #cac5c5 1px;
             position: absolute;
            left: 100px;
            top: 0px;
            text-align: center;
            font-size: 12px;
             line-height: 20px;
              cursor: pointer;
        }
    </style>
}
<div id="div_phone">
    <label style="position:absolute;left:0px; width:60px; top:5px; font-size:12px;">手机号码：</label>
    <input type="text" id="input_phone"  class="input_class" />
</div>
<div id="div_email">
    <label style="position:absolute;left:0px; width:60px; top:5px; font-size:12px;">Email：</label>
    <input type="text" id="input_email"  class="input_class" />
</div>
<div id="div_password">
    <label style="position:absolute;left:0px; width:60px; top:5px; font-size:12px;">重设密码：</label>
    <input type="password" value="111111" id="input_password"  class="input_class" />
</div>
<div id="div_buttons">
    <div id="btn_save" onclick="SaveUser()">确 定</div>
    <div id="btn_exit"  onclick="ExitWin()">取 消</div>
</div>